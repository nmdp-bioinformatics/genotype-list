<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.2.dtd">

<!--

    Configuration file for UrlRewriteFilter
    http://tuckey.org/urlrewrite/
    http://urlrewritefilter.googlecode.com

-->
<urlrewrite>

        <rule>
            <name>Serve HTML To Browser</name>
            <note>
                Browser sends Accept header with text.html.
            </note>
            <condition type="method">GET</condition>
            <condition name="Accept">.*text/html.*</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.html</to>
        </rule>

        <rule>
            <name>Serve HTML</name>
            <note>
                Serve HTML when content type is text/html and no .html extension
            </note>
            <condition type="method">GET</condition>
            <condition type="content-type">text/html</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.html</to>
        </rule>        
            
        <rule>
            <name>Serve RDF</name>
            <note>
                Serve RDF when content type is 	application/rdf+xml and no .rdf extension
            </note>
            <condition type="method">GET</condition>
            <condition type="content-type">application/rdf\+xml</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.rdf</to>
        </rule>

        <rule>
            <name>Serve RDF </name>
            <note>
                Serve RDF when Accept content type is  application/rdf+xml and no .rdf extension
            </note>
            <condition type="method">GET</condition>
            <condition name="Accept">.*application/rdf\+xml.*</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.rdf</to>
        </rule>
        
        <rule>
            <name>Serve Text</name>
            <note>
                Browser sends Accept header with text/plain
            </note>
            <condition type="method">GET</condition>
            <condition name="Accept">.*text/plain.*</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.glstring</to>
        </rule>
        
        <rule>
            <name>Serve Text by default</name>
            <note>
                No suffix or Accept header so send text/plain
            </note>
            <condition type="method">GET</condition>
            <from>/[a-z\-]+/([a-z0-9]+)$</from>
            <to type="redirect">$1.glstring</to>
        </rule>

    <!--

    INSTALLATION

        in your web.xml add...

        <filter>
            <filter-name>UrlRewriteFilter</filter-name>
            <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
            <init-param>
                <param-name>logLevel</param-name>
                <param-value>WARN</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>UrlRewriteFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>

     EXAMPLES

     Redirect one url
        <rule>
            <from>/some/old/page.html</from>
            <to type="redirect">/very/new/page.html</to>
        </rule>

    Redirect a directory
        <rule>
            <from>/some/olddir/(.*)</from>
            <to type="redirect">/very/newdir/$1</to>
        </rule>

    Clean a url
        <rule>
            <from>/products/([0-9]+)</from>
            <to>/products/index.jsp?product_id=$1</to>
        </rule>
    eg, /products/1234 will be passed on to /products/index.jsp?product_id=1234 without the user noticing.

    Browser detection
        <rule>
            <condition name="user-agent">Mozilla/[1-4]</condition>
            <from>/some/page.html</from>
            <to>/some/page-for-old-browsers.html</to>
        </rule>
    eg, will pass the request for /some/page.html on to /some/page-for-old-browsers.html only for older
    browsers whose user agent srtings match Mozilla/1, Mozilla/2, Mozilla/3 or Mozilla/4.

    Centralised browser detection
        <rule>
            <condition name="user-agent">Mozilla/[1-4]</condition>
            <set type="request" name="browser">moz</set>
        </rule>
    eg, all requests will be checked against the condition and if matched
    request.setAttribute("browser", "moz") will be called.

    -->

</urlrewrite>

