<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>BearerTokenFilter</filter-name>
		<filter-class>org.immunogenomics.gl.oauth.toy.rest.app.ToyBearerTokenFilter</filter-class>
		<init-param>
			<param-name>realm</param-name>
			<param-value>toy</param-value>
		</init-param>
		<init-param>
			<param-name>validateUrl</param-name>
			<param-value>http://localhost:9090/toy-portal/oauth/validate</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>BearerTokenFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
