<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="IMGT" transaction-type="RESOURCE_LOCAL">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>

		<class>org.immunogenomics.gl.imgt.db.model.AlignmentReference</class>
		<class>org.immunogenomics.gl.imgt.db.model.Allele</class>
		<class>org.immunogenomics.gl.imgt.db.model.AlleleRlsVerDtl</class>
		<class>org.immunogenomics.gl.imgt.db.model.AmbigComboElement</class>
		<class>org.immunogenomics.gl.imgt.db.model.AmbigComboGroup</class>
		<class>org.immunogenomics.gl.imgt.db.model.CdnaCoordinate</class>
		<class>org.immunogenomics.gl.imgt.db.model.CdnaIndel</class>
		<class>org.immunogenomics.gl.imgt.db.model.Citation</class>
		<class>org.immunogenomics.gl.imgt.db.model.Ethnicity</class>
		<class>org.immunogenomics.gl.imgt.db.model.Feature</class>
		<class>org.immunogenomics.gl.imgt.db.model.FeatureTranslation</class>
		<class>org.immunogenomics.gl.imgt.db.model.GGroup</class>
		<class>org.immunogenomics.gl.imgt.db.model.GGroupAllele</class>
		<class>org.immunogenomics.gl.imgt.db.model.GGrpRlsVerDtl</class>
		<class>org.immunogenomics.gl.imgt.db.model.IncompleteAllele</class>
		<class>org.immunogenomics.gl.imgt.db.model.Locus</class>
		<class>org.immunogenomics.gl.imgt.db.model.NucSequence</class>
		<class>org.immunogenomics.gl.imgt.db.model.ReleaseVersion</class>
		<class>org.immunogenomics.gl.imgt.db.model.RemovedAllele</class>
		<class>org.immunogenomics.gl.imgt.db.model.Sample</class>
		<class>org.immunogenomics.gl.imgt.db.model.Sequence</class>
		<class>org.immunogenomics.gl.imgt.db.model.SequenceCoordinate</class>
		<class>org.immunogenomics.gl.imgt.db.model.SourceMaterial</class>
		<class>org.immunogenomics.gl.imgt.db.model.SourceXref</class>
		<class>org.immunogenomics.gl.imgt.db.model.Species</class>
		<!-- <jta-data-source>jdbc/IMGT_db</jta-data-source> -->

		<properties>
<!-- 			<property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO, SQL=TRACE" /> -->
			<property name="openjpa.Log" value="DefaultLevel=ERROR, Tool=INFO, SQL=ERROR" />

			<property name="openjpa.ConnectionFactoryProperties" value="PrettyPrint=true, PrettyPrintLineLength=72" />

			<property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver" />
			<property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/imgt_hla" />
			<property name="openjpa.ConnectionUserName" value="imgt_admin" />
			<property name="openjpa.ConnectionPassword" value="imgthla" />
<!-- 			<property name="openjpa.ConnectionRetainMode" value="transaction"/> -->
		</properties>

	</persistence-unit>
</persistence>
