<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.immunogenomics.gl</groupId>
    <relativePath>../../pom.xml</relativePath>
    <artifactId>gl</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>glsw-oauth</artifactId>
  <packaging>war</packaging>

  <name>glsw-oauth</name>
  <description>gl-service-webapp with OAuth configured.</description>

  <scm>
    <connection>scm:svn|http://genotype-list.googlecode.com/svn/trunk/gl-service-webapp-custom/glsw-oauth</connection>
    <developerConnection>scm:svn|https://genotype-list.googlecode.com/svn/trunk/gl-service-webapp-custom/glsw-oauth</developerConnection>
    <url>http://code.google.com/p/genotype-list/source/browse/</url>
  </scm>

  <build>
    <plugins>
       <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-dependency-plugin</artifactId>
         <version>2.5.1</version>
         <executions>
           <execution>
             <id>unpack</id>
             <phase>generate-resources</phase>
             <goals>
               <goal>unpack</goal>
             </goals>
             <configuration>
               <artifactItems>
                 <artifactItem>
                   <groupId>org.immunogenomics.gl</groupId>
                   <artifactId>gl-service-webapp</artifactId>
                   <type>war</type>
                 </artifactItem>
               </artifactItems>
               <outputDirectory>${project.build.directory}/base-war</outputDirectory>
             </configuration>
           </execution>
         </executions>
       </plugin>
    
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <goals>
              <goal>transform</goal>
            </goals>
            <phase>process-resources</phase>
          </execution>
        </executions>
        <configuration>
          <transformationSets>
            <transformationSet>
              <dir>${project.build.directory}/base-war/WEB-INF</dir>
              <includes><include>web.xml</include></includes>
              <stylesheet>src/main/xml/update-web-xml.xsl</stylesheet>
              <outputDir>${project.build.directory}/changes-war/WEB-INF</outputDir>
            </transformationSet>
          </transformationSets>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <webResources>
            <resource>
              <directory>target/base-war</directory>
              <directory>target/changes-war</directory>
            </resource>
          </webResources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>8.1.5.v2012-20130716</version>
        <configuration>
          <systemProperties>
            <systemProperty>
               <name>oauth.validate.url</name>
               <value>http://localhost:8080/login/immunogenomics/validate</value>
             </systemProperty>
          </systemProperties>
          <connectors>
            <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
              <port>9090</port>
              <maxIdleTime>60000</maxIdleTime>
            </connector>
          </connectors>
          <webApp>
             <contextPath>/gl</contextPath>
          </webApp>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>xml-maven-plugin</artifactId>
                    <versionRange>[1.0,)</versionRange>
                    <goals>
                      <goal>transform</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore></ignore>
                  </action>
                </pluginExecution>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <versionRange>[2.5,)</versionRange>
                    <goals>
                      <goal>unpack</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore></ignore>
                  </action>
                </pluginExecution>
              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencies>
    <!-- base war that will be updated -->
    <dependency>
      <groupId>org.immunogenomics.gl</groupId>
      <artifactId>gl-service-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
    <!-- additional jars -->
    <dependency>
      <groupId>org.immunogenomics.gl</groupId>
      <artifactId>gl-web</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.immunogenomics.gl.oauth</groupId>
      <artifactId>gl-oauth-apache</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
