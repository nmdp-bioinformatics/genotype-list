<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.immunogenomics.gl</groupId>
    <artifactId>gl</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>glsw-d-o-s-filter</artifactId>
  <packaging>war</packaging>

  <name>glsw-d-o-s-filter</name>
  <description>gl-service-webapp with DenialOfServiceFilter configured.</description>

  <scm>
    <connection>scm:svn|http://genotype-list.googlecode.com/svn/trunk/glsw-d-o-s-filter</connection>
    <developerConnection>scm:svn|https://genotype-list.googlecode.com/svn/trunk/glsw-d-o-s-filter</developerConnection>
    <url>http://code.google.com/p/genotype-list/source/browse/</url>
  </scm>
  <build>
    <plugins>
       <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-dependency-plugin</artifactId>
         <version>2.5.1</version>
         <executions>
           <execution>
             <id>unpack</id>
             <phase>generate-resources</phase>
             <goals>
               <goal>unpack</goal>
             </goals>
             <configuration>
               <artifactItems>
                 <artifactItem>
                   <groupId>org.immunogenomics.gl</groupId>
                   <artifactId>gl-service-webapp</artifactId>
                   <type>war</type>
                 </artifactItem>
               </artifactItems>
               <outputDirectory>${project.build.directory}/base-war</outputDirectory>
             </configuration>
           </execution>
         </executions>
       </plugin>
    
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <goals>
              <goal>transform</goal>
            </goals>
            <phase>process-resources</phase>
          </execution>
        </executions>
        <configuration>
          <transformationSets>
            <transformationSet>
              <dir>${project.build.directory}/base-war/WEB-INF</dir>
              <includes><include>web.xml</include></includes>
              <stylesheet>src/main/xml/update-web-xml.xsl</stylesheet>
              <outputDir>${project.build.directory}/changes-war/WEB-INF</outputDir>
            </transformationSet>
          </transformationSets>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <webResources>
            <resource>
              <directory>target/base-war</directory>
              <directory>target/changes-war</directory>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <immunogenomics.componentId>gl.service.webapp</immunogenomics.componentId>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.immunogenomics.gl</groupId>
      <artifactId>gl-service-webapp</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
    <!-- additional jars -->
    <dependency>
      <groupId>org.immunogenomics.gl</groupId>
      <artifactId>gl-web</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
